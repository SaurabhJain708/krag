{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "BETTER_AUTH_URL",
        "DATABASE_URL",
        "DIRECT_URL",
        "NODE_ENV",
        "SUPABASE_URL",
        "SUPABASE_KEY",
        "REDIS_URL",
        "NEXT_PUBLIC_API_URL",
        "SUPABASE_SERVICE_ROLE_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true,
      "env": [
        "BETTER_AUTH_URL",
        "DATABASE_URL",
        "DIRECT_URL",
        "NODE_ENV",
        "SUPABASE_URL",
        "SUPABASE_KEY",
        "REDIS_URL",
        "NEXT_PUBLIC_API_URL",
        "SUPABASE_SERVICE_ROLE_KEY"
      ]
    }
  }
}
